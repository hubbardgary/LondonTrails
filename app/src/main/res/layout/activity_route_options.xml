<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_marginBottom="88dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:background="@drawable/activity_background">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/OptionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:divider="?android:dividerHorizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/StartLocationLbl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Start location:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>
                <Spinner
                    android:id="@+id/StartLocationSpinner"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"/>
                <View
                    android:id="@+id/DestinationSeparator"
                    android:layout_marginTop="1dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#C0C0C0"/>
                <TextView
                    android:id="@+id/DestinationLbl"
                    android:text="Destination:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>
                <Spinner
                    android:id="@+id/DestinationSpinner"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"/>
                <View
                    android:id="@+id/DirectionSeparator"
                    android:layout_marginTop="1dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#C0C0C0"/>
                <TextView
                    android:id="@+id/DirectionLbl"
                    android:text="Direction:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>

                <Spinner
                    android:id="@+id/DirectionSpinner"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/DistanceLbl"
                android:text="Approximate distance:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/DistanceValue"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/StartWarning"
                android:background="@drawable/warning_background"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >
                <TextView
                    android:id="@+id/StartWarningText"
                    android:drawableLeft="@drawable/baseline_bus_alert_black_24"
                    android:drawablePadding="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/EndWarning"
                android:background="@drawable/warning_background"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >
                <TextView
                    android:id="@+id/EndWarningText"
                    android:drawableLeft="@drawable/baseline_bus_alert_black_24"
                    android:drawablePadding="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/StickyBottom"
        android:background="@drawable/sticky_bottom_background"
        android:layout_marginTop="-88dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/GoBtn"
            android:text="@string/route_options_confirm_text"
            android:background="@drawable/button_background"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" />
    </LinearLayout>
</LinearLayout>